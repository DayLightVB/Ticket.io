%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "confirmables/shared/error_messages", resource: resource
  .field
    = f.label :email
    = f.email_field :email, class:'btn btn-secondary', autofocus: true, autocomplete: "email"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    = f.password_field :password, class:'btn btn-secondary', autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation, class:'btn btn-secondary', autocomplete: "new-password"
  .actions
    = f.submit "Sign up", class:'btn btn-success'
= render "confirmables/shared/links"
